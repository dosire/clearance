<% content_for :title, t(:sign_in_nu).capitalize %>

<div id="admin_wrapper">
  <% form_for (:session, :url => session_path) do |form| %>
    <p>
      <%= form.label :email, t(:email).capitalize %>
      <%= form.text_field :email, :class => "medium" %>
    </p>
    <p>
      <%= form.label :password, t(:password).capitalize %>
      <%= form.password_field :password, :class => "medium" %>
    </p>
    <br />
    <%= form.submit(t(:ok).capitalize, :disable_with => t(:please_wait).capitalize, :class => "button") %>
  <% end %>
  <br />
  <%= link_to t(:sign_up_nu).capitalize, sign_up_path %><br />
  <%= link_to t(:forgot_password), new_password_path %>
</div>

